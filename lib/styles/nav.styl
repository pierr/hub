nav.hub-container
  z-index: 1
  position: fixed
  top: 0
  bottom: 0;
  width: 250px
  height: 100%
  background-color: rgba(5,29,49,0.5)
  color: #fefefe
  -webkit-transform: translate(-250px, 0)
  transform: translate(-250px, 0)
  overflow-y: auto
  h4
    text-align: center
    padding-top: 15%
    /*background-color: white
    color: #3367D6*/
  div.items
    padding: 0
    margin: 0
  div.moreItems
    color: #fefefe
    padding-top: 20%;
    a
      padding-top: 15%
      display: block
      text-align: center
      color: #fefefe
      margin-left: auto;
      margin-right: auto;
nav.hub-container.open
  -webkit-transform: translate(0, 0);
  transform: translate(0, 0)
  