nav.hub-container
  z-index: 1
  position: fixed
  top: 0
  bottom: 0;
  width: 250px
  height: 100%
  background-color: rgba(5,29,49,0.5)
  color: #fefefe
  -webkit-transform: translate(-250px, 0)
  transform: translate(-250px, 0)
  overflow-y: auto
  h4
    background-color: white
    color: #3367D6
  div.items
    padding: 0
    margin: 0
    //list-style-type: none
    .item
      width:100%
      border-bottom-style: solid
      border-width: 1px
      border-color: white
      padding: 0
        a
          img
            width: 100px
            margin-left: auto
            margin-right: auto
            background-size: cover
            display: block
          span.title
            width: 100%
            text-align: center
nav.hub-container.open
  -webkit-transform: translate(0, 0);
  transform: translate(0, 0)
  