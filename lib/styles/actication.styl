.hub
  .hub-activator
    cursor: pointer
    cursor: hand
    overflow: hidden
    position: fixed
    display: block
    top: 45%
    left: 0px
    z-index: 2147000000
    margin: 0
    padding: 0
    border-collapse: collapse
    border-spacing: 0
    border: none
    outline: none
    color: blue
    .open
      display: none
      visibility: hidden
    button.hub-button
      height:50px
      background: #fff
      border-radius: 4px
      border:1px solid #ccc
      margin:0 10px 0
      box-shadow: 0 0 2px  #fff inset
      -webkit-transform: perspective(100px) rotateX(30deg)
      -moz-transform: perspective(100px) rotateX(30deg)
      span.label
        font-size: 0px
        line-height: 0px
    button.hub-button:hover span.label
        color:green
        font-size:15px
        line-height: 15px
